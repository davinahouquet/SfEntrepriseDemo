{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
    <h1>Liste des employés</h1>

    <a class="btn btn-success" href="{{path('new_employe')}}">Ajouter un employé</a><br>

    {% for employe in employes %}
        <a href="{{ path('show_employe', {'id':employe.id}) }}">{{ employe }}</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a  class="btn btn-warning" href="{{path('edit_employe', {'id' : employe.id})}}">Edit</a>
            <a  class="btn btn-danger" href="{{path('delete_employe', {'id' : employe.id})}}">X</a><br>
        {% endif %}


    {% endfor %}
{% endblock %}
