{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>

    <a class="btn btn-success" href="{{path('new_entreprise')}}">Ajouter une entreprise</a><br>

    {% for entreprise in entreprises %}
        {# <a href=""><b>{{ entreprise.raisonSociale }}</b>{{ ' (' ~entreprise.cp~' '~entreprise.ville~') ' }} </a><br> #}
        <a href="{{path('show_entreprise', {'id': entreprise.id} )}}"><b>{{ entreprise.raisonSociale }}</b></a><br>
        {# <b>{{ entreprise }}</b><br> Si __toString #}

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-warning" href="{{path('edit_entreprise', {'id' : entreprise.id})}}">Edit</a>
            <a  class="btn btn-danger" href="{{path('delete_entreprise', {'id' : entreprise.id})}}">X</a><br>
        {% endif %}
        
    {% endfor %}

{% endblock %}
